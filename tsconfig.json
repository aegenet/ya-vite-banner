{
  "compileOnSave": true,
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "target": "ES2020",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "sourceMap": true,
    "newLine": "LF",
    "outDir": "./build"
  },
  "exclude": [
    "./node_modules",
  ],
  "include": [
    "test",
    "src"
  ],
  "atom": {
    "rewriteTsconfig": false
  }
}
